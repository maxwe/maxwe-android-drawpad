<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="100dp"
    android:orientation="vertical">



    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" android:layout_weight="1">

        <Button
                android:id="@+id/bt_dialog_pens_default"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="普通"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                android:gravity="center"

                />
        <Button
                android:id="@+id/bt_dialog_pens_dotted"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="虚线"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                android:gravity="center"
                />
    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" android:layout_weight="1">

        <Button
                android:id="@+id/bt_dialog_pens_blur"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="模糊"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                android:gravity="center"
                />
        <Button
                android:id="@+id/bt_dialog_pens_emboss"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="浮雕"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                android:gravity="center"
                />
    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" android:layout_weight="1">

        <Button
                android:id="@+id/bt_dialog_pens_eraser"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="橡皮擦"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                android:gravity="center"
                />

    </LinearLayout>

    <SeekBar
            android:id="@+id/sb_dialog_pens_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"/>
    <Switch
            android:id="@+id/sw_dialog_pens_filled_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="填充"
            android:layout_weight="1"/>
</LinearLayout>